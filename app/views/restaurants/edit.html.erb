<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian']%>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<p> <%=  link_to "Back to index", restaurants_path(@restaurants) %></p>
